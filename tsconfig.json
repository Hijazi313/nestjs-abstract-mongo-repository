{
    "compilerOptions": {
      "target": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "typeRoots": ["node_modules/@types", "src/types"],  // Add the necessary path
      "paths": {
        "*": ["*", "node_modules/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  